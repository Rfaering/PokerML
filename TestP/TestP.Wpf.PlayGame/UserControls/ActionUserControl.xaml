<UserControl x:Class="TestP.Wpf.PlayGame.UserControls.ActionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestP.Wpf.PlayGame.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Command="{Binding Path=Command}" Width="80" Height="48" Background="{Binding Background}">
            <Button.ToolTip>
                <ToolTip>
                    <TextBlock Text="{Binding Path=Value, StringFormat=N2}"></TextBlock>
                </ToolTip>
            </Button.ToolTip>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{Binding Path=Text}" HorizontalAlignment="Center"></TextBlock>
                <TextBlock Grid.Row="1" Text="{Binding Path=CostToTakeAction}"  HorizontalAlignment="Center"></TextBlock>
            </Grid>
            
        </Button>
    </Grid>
</UserControl>

    