<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:VM="clr-namespace:TestP.Wpf.PlayGame.VM" xmlns:playgame="clr-namespace:TestP.Wpf.PlayGame"
    x:Class="TestP.Wpf.PlayGame.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200" Background="#303030">
    <Window.DataContext>
        <VM:MainVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <playgame:BoardUserControl DataContext="{Binding Board}" Grid.Row="0"></playgame:BoardUserControl>
        
        <ItemsControl HorizontalAlignment="Stretch" ItemsSource="{Binding Path=Players}" Grid.Row="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <playgame:PlayerUserControl HorizontalAlignment="Stretch"></playgame:PlayerUserControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
